{
  "name": "@fearless-ma/gitcommit",
  "version": "1.8.0",
  "description": "[http://www.ruanyifeng.com/blog/2016/01/commit_message_change_log.html](阮一峰commit message)",
  "main": "index.js",
  "bin": {
    "commit": "./bin/git.sh",
    "logs": "./bin/logs.js"
  },
  "scripts": {
    "precommit": "echo 123",
    "release": "standard-version",
    "releasealpha": "standard-version --prerelease alpha",
    "test": "echo \"Error: no test specified\" && exit 1",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "pushtag": "git push --tags",
    "commit": "sh ./bash/git.sh",
    "lint": "eslint src && lint-staged",
    "l": "logs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FearlessMa/gitMessage.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FearlessMa/gitMessage/issues"
  },
  "homepage": "https://github.com/FearlessMa/gitMessage#readme",
  "devDependencies": {
    "conventional-changelog-cli": "^2.0.31",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "2.0.5",
    "standard-version": "^7.1.0",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "./validate-commit-msg.js"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --tab-width 4 --write",
      "eslint --fix",
      "git add"
    ]
  }
}
